{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ui:dev:start",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*",
                    "endsPattern": "Local:"
                }
            }
        },
        {
            "label": "ui:dev:stop",
            "type": "shell",
            "command": "echo ${input:terminate}",
        },
        {
            "label": "ui:stg-debug:start",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "args": [
                "run",
                "dev",
                "--",
                "--mode",
                "staging-debug"
            ],
            "windows": {
                "args": [
                    "run",
                    "dev",
                    "--",
                    "--",
                    "--mode",
                    "staging-debug"
                ]
            },
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*",
                    "endsPattern": "Local:"
                }
            }
        },
        {
            "label": "ui:stg-debug:stop",
            "type": "shell",
            "command": "echo ${input:terminate-stg}",
        },
        {
            "label": "ui:build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ]
        },
        {
            "label": "install latest api-def",
            "type": "shell",
            "command": "npm",
            "args": [
                "install",
                "cap-store-api-def@latest"
            ]
        },
        {
            "label": "version:set",
            "detail": "package.json,tauri.conf.json,cargo.tomlのバージョンを置き換える",
            "type": "shell",
            "command": "node",
            "args": [
                "./scripts/set-version.mjs",
                "${input:version}"
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "replace-script:build",
            "type": "shell",
            "command": "node",
            "args": [
                "./scripts/replace-proj.mjs",
                "B"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "replace-script:install",
            "type": "shell",
            "command": "node",
            "args": [
                "./scripts/replace-proj.mjs",
                "I"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "xcodegen",
            "type": "shell",
            "command": "xcodegen",
            "options": {
                "cwd": "src-tauri/gen/apple"
            }
        },
        {
            "label": "ios-init",
            "detail": "iosのプロジェクト作成",
            "type": "shell",
            "command": "npx",
            "args": [
                "tauri",
                "ios",
                "init",
                "--config",
                "./src-tauri/tauri.conf.prod.json",
            ]
        },
        {
            "label": "ios-build",
            "detail": "ios用にビルド",
            "type": "shell",
            "command": "npx",
            "args": [
                "tauri",
                "ios",
                "build",
                "--features",
                "mobile",
                "--debug",
                "--config",
                "./src-tauri/tauri.conf.prod.json",
            ],
            "dependsOn": [
                "replace-script:build",
                "xcodegen"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "ios-install",
            "detail": "XCodeから端末にインストールする用の設定変更",
            "type": "shell",
            "command": "npx",
            "args": [
                "tauri",
                "ios",
                "build",
                "--features",
                "mobile",
                "--debug",
                "--config",
                "./src-tauri/tauri.conf.prod.json",
            ],
            "dependsOn": [
                "replace-script:install",
                "xcodegen"
            ],
            "dependsOrder": "sequence"
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "ui:dev:start"
        },
        {
            "id": "terminate-stg",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "ui:stg:start"
        },
        {
            "id": "version",
            "type": "promptString",
            "description": "新しいバージョン (例: 0.3.2 または v0.3.2)",
            "default": "0.0.0"
        }
    ],
}