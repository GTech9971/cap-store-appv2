{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Tauri bundle dmg",
            "type": "shell",
            "command": "cross-env REACT_APP_ENV=${input:envSelector} npm run tauri build -- --bundles dmg",
            "problemMatcher": []
        },
        {
            "label": "ui:dev:start",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*",
                    "endsPattern": "Local:"
                }
            }
        },
        {
            "label": "ui:dev:stop",
            "type": "shell",
            "command": "echo ${input:terminate}",
        },
        {
            "label": "ui:build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ]
        }
    ],
    "inputs": [
        {
            "id": "envSelector",
            "type": "pickString",
            "description": "ビルド環境を選択してください",
            "options": [
                "development",
                "staging",
                "production"
            ],
            "default": "development"
        },
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "ui:dev:start"
        }
    ],
}