{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ui:dev:start",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*",
                    "endsPattern": "Local:"
                }
            }
        },
        {
            "label": "ui:dev:stop",
            "type": "shell",
            "command": "echo ${input:terminate}",
        },
        {
            "label": "ui:stg-debug:start",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "args": [
                "run",
                "dev",
                "--",
                "--mode",
                "staging-debug"
            ],
            "windows": {
                "args": [
                    "run",
                    "dev",
                    "--",
                    "--",
                    "--mode",
                    "staging-debug"
                ]
            },
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*",
                    "endsPattern": "Local:"
                }
            }
        },
        {
            "label": "ui:stg-debug:stop",
            "type": "shell",
            "command": "echo ${input:terminate-stg}",
        },
        {
            "label": "ui:build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ]
        },
        {
            "label": "install latest api-def",
            "type": "shell",
            "command": "npm",
            "args": [
                "install",
                "cap-store-api-def@latest"
            ]
        },
        {
            "label": "version:set",
            "detail": "package.json,tauri.conf.json,cargo.tomlのバージョンを置き換える",
            "type": "shell",
            "command": "node",
            "args": [
                "./scripts/set-version.mjs",
                "${input:version}"
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "ui:dev:start"
        },
        {
            "id": "terminate-stg",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "ui:stg:start"
        },
        {
            "id": "version",
            "type": "promptString",
            "description": "新しいバージョン (例: 0.3.2 または v0.3.2)",
            "default": "0.0.0"
        }
    ],
}