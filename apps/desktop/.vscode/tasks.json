{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ui:dev:start",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*",
                    "endsPattern": "Local:"
                }
            }
        },
        {
            "label": "ui:dev:stop",
            "type": "shell",
            "command": "echo ${input:terminate}",
        },
        {
            "label": "ui:build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ]
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "ui:dev:start"
        }
    ],
}