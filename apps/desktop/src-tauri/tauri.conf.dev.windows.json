{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "[dev]cap-store-app",
  "version": "0.4.0",
  "identifier": "com.george.cap-store-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "vite build --mode development-windows",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "[dev]cap-store-app",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' asset: customprotocol:",
        "connect-src": "'self' https://integrator-3843898.okta.com http://localhost:1420 ipc: http://ipc.localhost",
        "img-src": "'self' https://ionicframework.com https://nukomabo.work https://akizukidenshi.com https://www.etechnophiles.com https://mm.digikey.com https://eleshop.jp https://www.marutsu.co.jp https://www.amazon.co.jp https://m.media-amazon.com https://www.molex.com",
        "script-src": "'self'",
        "style-src": "'unsafe-inline' 'self'",
        "frame-src": "'self' https://integrator-3843898.okta.com"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
