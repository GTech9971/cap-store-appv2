{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "cap-store-app[stg]",
    "version": "0.2.0",
    "identifier": "com.george.cap-store-app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "vite build --mode staging",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "cap-store-app[stg]",
                "width": 1000,
                "height": 600
            }
        ],
        "security": {
            "csp": {
                "default-src": "'self' asset: customprotocol:",
                "connect-src": "'self' https://dev-75695150.okta.com https://10.211.55.4 ipc: http://ipc.localhost",
                "img-src": "'self' https://ionicframework.com  https://akizukidenshi.com",
                "script-src": "'self'",
                "style-src": "'unsafe-inline' 'self'",
                "frame-src": "'self' https://dev-75695150.okta.com"
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}