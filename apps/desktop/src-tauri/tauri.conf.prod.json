{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "cap-store-app",
    "version": "0.1.0",
    "identifier": "com.george.cap-store-app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "vite build --mode production",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "cap-store-app",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}